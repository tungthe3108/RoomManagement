@model RoomRentalManagementClassLibrary.Models.Room

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Cập nhật</h1>

<h4>Phòng</h4>
<hr />
<div >
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomId" value="@Model.RoomId" />
            <div class="row">
                <div class="form-group col-lg-4">
                <label asp-for="RoomName" class="control-label">Tên phòng</label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
                <div class="form-group col-lg-4">
                <label asp-for="Floor" class="control-label">Tầng</label>
                <select asp-for="Floor" class="form-control">
                    <option value=""></option>
                    <option value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                    <option value=4>4</option>
                    <option value=5>5</option>
                </select>
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label asp-for="NumOfLiving" class="control-label">Số người đang ở</label>
                <input asp-for="NumOfLiving" class="form-control" />
                <span asp-validation-for="NumOfLiving" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label asp-for="NumOfPerson" class="control-label">Số người ở tối đa</label>
                    <select asp-for="NumOfPerson" class="form-control">
                        <option value=""></option>
                        <option value=2>2</option>
                        <option value=3>3</option>
                        <option value=4>4</option>
                        <option value=5>5</option>
                    </select>
                <span asp-validation-for="NumOfPerson" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label asp-for="Area" class="control-label">Diện tích</label>
                    <select asp-for="Area" class="form-control">
                        <option value=""></option>
                        <option value=20>20</option>
                        <option value=25>25</option>
                        <option value=30>30</option>
                    </select>
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
                <div class="form-group col-lg-4">
                <label asp-for="Price" class="control-label">Giá</label>
                    <select asp-for="Price" class="form-control">
                        <option value=""></option>
                        <option value=2000000>20</option>
                        <option value=2500000>25</option>
                        <option value=3000000>30</option>
                    </select>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-2">
                <button class="btn btn-secondary" style="border-radius:15px"><a asp-action="List" class="text-decoration-none" style="color:white">Quay lại</a></button>
                <input style="border-radius:15px" type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
